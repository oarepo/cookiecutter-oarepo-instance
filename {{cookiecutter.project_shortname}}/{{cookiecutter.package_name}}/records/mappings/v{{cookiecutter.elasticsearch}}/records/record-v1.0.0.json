{
  "mappings": {
{%- if cookiecutter.elasticsearch == '6' %}
    "record-v1.0.0": {
      "date_detection": false,
      "numeric_detection": false,
      "oarepo:extends": [
        "invenio-v1.0.0.json#/InvenioRecord",
        "dcterms-v2.0.0.json#/DCObject"
      ],
      "properties": {
        "$schema": {
          "type": "text",
          "index": false
        },
        "_bucket": {
          "type": "text"
        },
        "_files": {
          "type": "object",
          "properties": {
            "key": {
                "type": "text"
            },
            "file_id": {
              "type": "text"
            },
            "bucket": {
                "type": "text"
            },
            "checksum": {
                "type": "text"
            },
            "size": {
                "type": "text"
            },
            "version_id": {
                "type": "text"
            }
          }
        },
        "title": {
          "type": "text",
          "copy_to": "suggest_title"
        },
        "{{ cookiecutter.datamodel_pid_name }}": {
          "type": "keyword"
        }
      }
    }
{%- elif cookiecutter.elasticsearch == '7' %}
    "date_detection": false,
    "numeric_detection": false,
    "oarepo:extends": [
      "invenio-v1.0.0.json#/InvenioRecord",
      "dcterms-v2.0.0.json#/DCObject"
    ],
    "properties": {
      "$schema": {
        "type": "text",
        "index": false
      },
      "title": {
        "type": "text",
        "copy_to": "suggest_title"
      },
      "{{ cookiecutter.datamodel_pid_name }}": {
        "type": "keyword"
      }
    }
{%- endif %}
  }
}
